<% unless flash[:notice].blank? %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= content_tag :div, flash[:notice] %>
  </div>
<% end %>

<h1>Contact Us</h1>

<p>Getting in contact with us is easy! Either use the form below or call us on 07827 920721.</p>
<p>We aim to respond within 24 hours.</p> 


<%= form_tag(contact_index_path, :method=>'post', :id=>'contact_form') do %>

  <p>
    <%= label_tag "Name", "Name:" %>
    <%= text_field_tag "Name", nil, :id=>'contact_name' %>
  </p>
   <p>
    <%= label_tag "Email", "Email address:" %>
    <%= text_field_tag "Email", nil, :id=>'contact_email' %>
  </p>
   <p>
    <%= label_tag "Message", "Your message:" %>
    <%= text_area_tag "Message", nil, :id=>'contact_message' %>
  </p>

  <p>
    <%= submit_tag 'Submit', :class=>'btn btn-primary', :id=>'contact_submit' %>
  </p>
  
<% end %>