<h1>Gallery</h1><br />

<div class="row">
  <% @albums.each do |album| %>
    <div class="span2">
      <div class="img-polaroid">
        <%= link_to image_tag(album.cover_image, :alt => album.title, :class =>"gallery_image"), "/gallery/"+album.slug %>
        <p><%= album.title %></p>
      </div>
    </div>
  <% end %>
</div> 



