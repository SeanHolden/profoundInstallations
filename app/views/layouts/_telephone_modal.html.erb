<!-- Modal -->
<div id="telephoneModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Edit contact number</h3>
  </div>
  
  <%= form_tag(cms_path(:page => 'layout', :attribute => 'telephone'), :method=>'post') do %>
    <div class="modal-body">
      <%= text_field_tag "edited_text", nil, :class => 'text_area', :value => "#{@cmslayout.telephone}" %>
    </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <%= submit_tag "Save changes", :class=>"btn btn-primary" %>
    </div>
  <% end %>
</div>