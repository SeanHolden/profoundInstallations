<% @cmslayout = CmsLayout.first %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Profound Installations" %></title>
    <%= csrf_meta_tags %>

    <%= javascript_include_tag "application" %>

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

  </head>

  <body>

    <%= render 'layouts/admin_bar' if admin_signed_in? %>

    <%# FLASH MESSAGES START %>
    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <button class="close" data-dismiss="alert" type="button">&times;</button>
        <%= content_tag :div, flash[:notice] %>
      </div>
    <% end %>

    <% unless flash[:error].blank? %>
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert" type="button">&times;</button>
        <%= content_tag :div, flash[:error] %>
      </div>
    <% end %>

    <% unless flash[:alert].blank? %>
      <div class="alert">
        <button class="close" data-dismiss="alert" type="button">&times;</button>
        <%= content_tag :div, flash[:alert] %>
      </div>
    <% end %>
    <%# FLASH MESSAGES END %>

    <% if admin_signed_in? %>
      <%= render 'layouts/tagline_modal' %>
      <%= render 'layouts/location_modal' %>
      <%= render 'layouts/telephone_modal' %>
    <% end %>


    <div class="container" id="sitecontainer">
      <div class="row">
        <div class="span4">
          <%= link_to image_tag("logo.png", :size => "322x110", :alt => "Profound Installations"), root_path %>
        </div>
        
        <% if admin_signed_in? %>
          <%= render 'layouts/admin_tagline' %>
        <% else %>
          <div class="span4" id="tagline">
            <h3><em><%= "#{@cmslayout.tagline}" %></em></h3>           
          </div>
        <% end %>
        
        <% if admin_signed_in? %>
          <%= render 'layouts/admin_telephone' %>
        <% else %>
          <div class="span4" id="contactinfo">
            <div><h3><%= "#{@cmslayout.location}" %></h3></div>
            <h3>Tel: <span style="color:black;"> <%= "#{@cmslayout.telephone}" %> </span></h3>
          </div>
        <% end %>
        

      </div>
      
    <%# NAVBAR START %>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href=<%= root_path %>>Home</a>
          <div class="container nav-collapse">
            <ul class="nav">
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "Testimonials", testimonials_path %></li>
              <li><%= link_to "Gallery", gallery_path %></li>
              <li><%= link_to "Contact", contact_index_path  %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <%# NAVBAR END %>

    <div class="content">
       
       <%= yield %>
   
    </div>

      <footer>
        <div class="span5">
          <span>
            &copy; Profound Installations 2012
          </span>
        
          <a class="facebook_button" 
             href="http://www.facebook.com/pages/Profound-Installations/384847928215897">
            <%= image_tag("facebook.png", :alt => "Visit us on Facebook") %>
          </a>
          <%= image_tag("twitter.png", :alt => "Follow us on Twitter") %>
        </div>
        
      </footer>

    </div> <!-- /container -->


  </body>
</html>
