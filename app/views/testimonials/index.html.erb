<% unless flash[:notice].blank? %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= content_tag :div, flash[:notice] %>
  </div>
<% end %>

<% unless flash[:alert].blank? %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= content_tag :div, flash[:alert] %>
  </div>
<% end %>

<h1>Testimonials</h1>

<%= link_to 'Add Testimonial', new_testimonial_path, :class=>'btn btn-warning add_new_testimonial' %>

<% @testimonials.each do |testimonial| %>
  <div class='admin_testimonial'>
  	<p><strong><%= testimonial.name %></strong></p>
    <p><%= sanitize(simple_format(testimonial.body), :tags => %w(br p) ) %></p>
    <%= link_to 'Edit', edit_testimonial_path(:id => testimonial.id) %> |
    <%= link_to 'Delete', testimonial_path(:id => testimonial.id), :method=> :delete, :confirm => 'Are you sure you want to delete this testimonial?' %>
  </div>
<% end %>